// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Server {
  id               Int             @id @default(autoincrement())
  guildId          String          @unique @default("0")
  maxReactionRoles Int?            @default(10)
  maxForms         Int?            @default(10)
  managerRoleId    String?
  embedColor       String?         @default("ffffff")
  reactionRoles    reactionRoles[]
  forms            form[]
}

model reactionRoles {
  id        Int     @id @default(autoincrement())
  server    Server  @relation(fields: [guildId], references: [guildId])
  name      String
  guildId   String
  exclusive Boolean @default(false)
  type      type
  roles     role[]

  @@unique([guildId, name])
}

model role {
  id              Int           @id @default(autoincrement())
  reactionRole    reactionRoles @relation(fields: [reactionRolesId], references: [id])
  reactionRolesId Int
  roleId          String
  name            String
  removable       Boolean?      @default(true)
}

model form {
  id              Int          @id @default(autoincrement())
  server          Server       @relation(fields: [guildId], references: [guildId])
  name            String
  guildId         String
  reactionRolesId Int
  responseChannel String
  fields          formFields[]
}

model formFields {
  id          Int     @id @default(autoincrement())
  form        form    @relation(fields: [formId], references: [id])
  formId      Int
  customId    Int     @default(autoincrement())
  name        String
  maxLength   Int     @default(1000)
  minLength   Int     @default(0)
  placeholder String  @default("Enter a response.")
  isRequired  Boolean @default(false)
}

enum type {
  BUTTON
  LIST
}
