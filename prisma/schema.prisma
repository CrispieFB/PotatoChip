// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Server {
  id               Int             @id @default(autoincrement())
  guildId          String          @unique @default("0")
  maxReactionRoles Int?            @default(5)
  managerRoleId    String?
  embedColor       String?         @default("ffffff")
  reactionRoles    reactionRoles[]
  forms            form[]
}

model reactionRoles {
  id        Int     @id @default(autoincrement())
  server    Server  @relation(fields: [guildId], references: [guildId])
  name      String
  guildId   String
  exclusive Boolean @default(false)
  type      type
  roles     role[]

  @@unique([guildId, name])
}

model role {
  id              Int           @id @default(autoincrement())
  reactionRole    reactionRoles @relation(fields: [reactionRolesId], references: [id])
  reactionRolesId Int
  roleId          String
  name            String
  removable       Boolean?      @default(true)
}

model form {
  id              Int    @id @default(autoincrement())
  server          Server @relation(fields: [guildId], references: [guildId])
  name            String
  guildId         String
  reactionRolesId Int
  fields          Json
}

enum type {
  BUTTON
  LIST
}
